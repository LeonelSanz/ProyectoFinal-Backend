<div>
    <h1>Hi {{user.firstName}}, this is your cart</h1>
    {{#if products}}
        <br>
        <h4>Total price: ${{this.totalPrice}}</h4>
        {{#each products}}
        <div class="cardCart shadow">
            <div class="container">
                <div class="row" id="{{this._id}}">
                    <div class="col">
                        <img src="{{this.image}}" alt="" class="imagenCart w-25">
                    </div>
                    <div class="col">
                        <p>{{this.title}} x {{this.quantify}}</p>
                        <p>${{this.price}}</p>
                    </div>
                </div>
            </div>
        </div>
        {{/each}} 
        <hr class="divisor">
        <div class="btn-group d-flex align-items-center justify-content-center" role="group" aria-label="Basic example">
            <button class="button" id="purchaseButton">
                <a href="/api/carts/purchase/">
                    <strong>
                        Finish purchase
                    </strong>
                </a>
            </button>
            <button class="button">
                <a href="/">Continue shopping</a>
            </button>    
        </div>
    {{else}}
    <h5>No products in your cart yet</h5>
    <a href="/">
        <button class="button">
            Let's start shopping
        </button>
    </a>
    {{/if}}
</div>